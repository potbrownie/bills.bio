# LLM (required for agent)
OPENAI_API_KEY=sk-...

# PostgreSQL connection (required for profile storage)
DATABASE_URL=postgresql://localhost:5432/bills_bio

# Web search (optional; agent works without it but cannot search the web)
SERPER_API_KEY=

# Google Calendar API (Optional - for meeting scheduling)
# Path to your Google Calendar API credentials JSON file
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials.json
# Path to store OAuth token (will be created automatically)
GOOGLE_CALENDAR_TOKEN_PATH=./token.pickle
# Calendar ID to use (default: 'primary' for main calendar)
GOOGLE_CALENDAR_ID=primary

# AWS SES (Simple Email Service) - for send_email tool
# Your email address (where emails will be sent)
OWNER_EMAIL=your-email@example.com
# Verified sender email in AWS SES (can be same as OWNER_EMAIL)
SES_FROM_EMAIL=noreply@yourdomain.com
# AWS region for SES
AWS_REGION=us-east-1
# AWS credentials (or use IAM role)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Production: use AWS SSM Parameter Store for secrets; do not commit real values
# Optional: load keys from SSM at startup (requires boto3)
# USE_SSM=false
# SSM_PARAMETER_PREFIX=/bills-bio/agent/

# OpenAI request limits (optional tuning)
# OPENAI_TIMEOUT_SECONDS=60
# OPENAI_MAX_TOKENS=4096

# Rate limits: messages per hour per IP (0 = no limit)
# RATE_LIMIT_PUBLIC_PER_HOUR=20
# RATE_LIMIT_PRIVATE_PER_HOUR=100

# Optional in-memory TTL cache for web search (0 = disabled)
# SEARCH_CACHE_TTL_SECONDS=60

# Memory (Mem0 OSS) - session-based conversation memory
# MEMORY_ENABLED=true
