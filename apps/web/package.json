{
  "name": "@bills.bio/web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "next lint",
    "check-memory": "node scripts/check-memory.js",
    "check-memory:watch": "node scripts/check-memory.js --watch",
    "db:init": "psql $DATABASE_URL -f scripts/schema-4-tables-final.sql",
    "db:seed": "tsx scripts/seed-bill-simple.ts",
    "db:reset": "psql $DATABASE_URL -c 'DROP SCHEMA public CASCADE; CREATE SCHEMA public;' && npm run db:init && npm run db:seed",
    "db:setup-blog": "DATABASE_URL=${DATABASE_URL:-postgresql://localhost:5432/bills_bio} tsx scripts/setup-blog.ts",
    "billing:seed": "tsx scripts/seed-billing-data.ts",
    "billing:track-email": "tsx scripts/track-email-usage.ts",
    "billing:reset-monthly": "tsx scripts/reset-monthly-billing.ts"
  },
  "dependencies": {
    "@tiptap/extension-code-block-lowlight": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-typography": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.23",
    "lowlight": "^3.3.0",
    "next": "^16.1.3",
    "openai": "^6.17.0",
    "pg": "^8.13.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "tsx": "^4.19.2"
  }
}
